<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome: "
        android:layout_marginTop="15dp"
        style="?android:attr/textAppearanceMedium"/>
    <EditText
        android:id="@+id/edt_nome"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_1"
        android:layout_toEndOf="@+id/txt_1"
        android:layout_toRightOf="@+id/txt_1"/>

    <TextView
        android:id="@+id/txt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Idade: "
        android:layout_below="@+id/txt_1"
        android:layout_marginTop="30dp"
        style="?android:attr/textAppearanceMedium"/>
    <EditText
        android:id="@+id/edt_idade"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_2"
        android:layout_toEndOf="@+id/txt_2"
        android:layout_toRightOf="@+id/txt_2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gravar"
        android:onClick="save"
        android:layout_below="@+id/txt_2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"/>

</RelativeLayout>
