<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ismael.aula5softbluelayouts.RelativeLayoutActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dados Pessoais"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNome"
        android:text="Nome: "
        android:layout_alignBaseline="@+id/edtNome"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/edtNome"
        android:layout_toRightOf="@+id/txtNome"
        android:layout_marginTop="50dp"
        android:layout_alignLeft="@+id/edtSobrenome"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sobrenome: "
        android:id="@+id/txtSobrenome"
        android:layout_alignBaseline="@+id/edtSobrenome"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/edtSobrenome"
        android:layout_toRightOf="@+id/txtSobrenome"
        android:layout_below="@+id/edtNome"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/btnCanc"
        android:layout_alignTop="@+id/btnConf"
        android:layout_toLeftOf="@+id/btnConf"/>
    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Confirmar"
        android:id="@+id/btnConf"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/edtSobrenome"
        android:layout_marginTop="20dp"/>


</RelativeLayout>
